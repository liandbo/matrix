void checkLower(int r, int c, int array[i][j])
{
    for(i=0;i<r;i++)    // cho "i<r" va "j<c" thi matrix moi so voi hang va cot, neu tui viet
       {     				//nhu cua Thien thi ko bit chinh sao cho hop ly
		 for(j=0;j<c;j++)
           { if (array[i][j] != 0)
            {
                printf("Not lower triagonal matrix");
                return;
                break;
            }  
		}
    printf ("=>Lower triagonal matrix");        
}
